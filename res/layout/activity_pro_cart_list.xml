<?xml version="1.0" encoding="utf-8"?>
<com.example.gouwuche02.view.ProCartListView xmlns:android="http://schemas.android.com/apk/res/android"
   	android:id="@+id/proCartListView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:listSelector="@android:color/transparent"
        android:layout_weight="1" >
    </ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="#fffffccc" >

        <ImageView
            android:id="@+id/iv_unselect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_circle_normal" />

        <TextView
            android:id="@+id/tv_select_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_unselect"
            android:gravity="center"
            android:text="全选"
            android:textColor="@android:color/holo_green_light"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_select_all"
            android:orientation="vertical" >
            
            <TextView
            android:id="@+id/tv_select_count" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已选商品：0"
            
            />
        
        <TextView
            android:id="@+id/tv_all_price" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总计：0.0￥"
            
            />
        </LinearLayout>
        
        <TextView 
            android:id="@+id/tv_go_order"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_green_dark"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="去结算"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            
            />
    </RelativeLayout>

</com.example.gouwuche02.view.ProCartListView>